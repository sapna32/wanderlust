<% layout("/layouts/boilerplate") %>

<div class="container">
  <h3>Booking Details for <%= booking.listing.title %></h3>
  <p><strong>Check-in:</strong> <%= booking.checkIn.toDateString() %></p>
  <p><strong>Check-out:</strong> <%= booking.checkOut.toDateString() %></p>
  <p><strong>Guests:</strong> <%= booking.guests %></p>
  <p><strong>Notes:</strong> <%= booking.notes %></p>

  <a href="/dashboard" class="btn btn-dark">Go to Dashboard</a>
</div>